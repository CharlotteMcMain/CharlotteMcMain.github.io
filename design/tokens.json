{
"$schema": "https://design-tokens.org/schema.json",
"meta": { "name": "Physics Practice Tokens", "version": "1.0.0" },
"color": {
"background": { "base": "#FFFFFF" },
"text": { "base": "#0B1220", "muted": "#4B5563", "inverse": "#FFFFFF" },
"primary": {
"50": "#EFF6FF",
"100": "#DBEAFE",
"200": "#BFDBFE",
"300": "#93C5FD",
"400": "#60A5FA",
"500": "#3B82F6",
"600": "#2563EB",
"700": "#1D4ED8",
"800": "#1E40AF",
"900": "#1E3A8A"
},
"grey": {
"50": "#F9FAFB",
"100": "#F3F4F6",
"200": "#E5E7EB",
"300": "#D1D5DB",
"400": "#9CA3AF",
"500": "#6B7280",
"600": "#4B5563",
"700": "#374151",
"800": "#1F2937",
"900": "#111827"
},
"feedback": {
"success": "#16A34A",
"warning": "#D97706",
"error": "#DC2626",
"info": "#0284C7"
},
"border": { "base": "#E5E7EB" },
"focus": { "ring": "#2563EB80" }
},
"typography": {
"fontFamily": { "sans": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, \"Apple Color Emoji\", \"Segoe UI Emoji\"" },
"lineHeight": { "tight": 1.2, "normal": 1.5 },
"sizeRem": { "h1": 3.0, "h2": 2.25, "h3": 1.5, "body": 1.0, "caption": 0.875 },
"weight": { "regular": 400, "medium": 500, "semibold": 600 }
},
"radius": { "sm": 8, "md": 12, "lg": 16, "xl": 24 },
"spacing": { "unit": 4, "scale": [4,8,12,16,20,24,32,40,48,64] },
"shadow": {
"card": "0 2px 8px rgba(0,0,0,0.04), 0 1px 2px rgba(0,0,0,0.06)",
"elevated": "0 8px 24px rgba(0,0,0,0.08)"
},
"breakpointPx": { "sm": 640, "md": 768, "lg": 1024, "xl": 1280 },
"zIndex": { "dropdown": 1000, "overlay": 1300, "modal": 1500, "toast": 1700 }
}